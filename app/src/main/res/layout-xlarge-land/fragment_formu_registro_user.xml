<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragRegUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragdesng"
    android:gravity="center"
    tools:context="com.example.edwin.turismo.FormuRegistroUser">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/Login"
        android:text="@string/registroUser"
        android:textAllCaps="true"
        android:textColor="@color/colorLetra"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgEmail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imgPass1"
        android:layout_alignTop="@+id/editEmailReg"
        android:layout_weight="1"
        android:background="@drawable/icodis"
        android:contentDescription="@string/User"
        android:src="@drawable/correo" />

    <EditText
        android:id="@+id/editEmailReg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        android:background="@drawable/edit"
        android:ems="10"
        android:hint="@string/User"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColor="@color/colorLetra"
        android:textColorHint="@color/btn" />

    <ImageView
        android:id="@+id/imgPass1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editPassReg2"
        android:layout_marginEnd="471dp"
        android:layout_weight="1"
        android:background="@drawable/icodis"
        android:contentDescription="@string/Password"
        android:src="@drawable/contrasena" />

    <EditText
        android:id="@+id/editPassReg1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editEmailReg"
        android:layout_marginTop="275dp"
        android:layout_weight="1"
        android:background="@drawable/edit"
        android:ems="10"
        android:hint="@string/Password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColorHint="@color/btn" />

    <ImageView
        android:id="@+id/imgPass2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/imgPass1"
        android:layout_alignTop="@+id/editPassReg1"
        android:layout_weight="1"
        android:background="@drawable/icodis"
        android:contentDescription="@string/Password"
        android:src="@drawable/contrasena" />

    <EditText
        android:id="@+id/editPassReg2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editEmailReg"
        android:layout_marginTop="350dp"
        android:layout_weight="1"
        android:background="@drawable/edit"
        android:ems="10"
        android:hint="@string/repita"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColorHint="@color/btn" />

    <Button
        android:id="@+id/btnRegCancelar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:text="@string/cancelar"
        android:textColor="@color/colorLetra" />

    <Button
        android:id="@+id/btnRegUser"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:layout_weight="1"
        android:background="@drawable/btn"
        android:text="@string/regUserBtn"
        android:textColor="@color/colorLetra" />

    <ImageView
        android:id="@+id/imgLogoReg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="175dp"
        android:background="@drawable/img"
        android:src="@drawable/banner" />

</RelativeLayout>
