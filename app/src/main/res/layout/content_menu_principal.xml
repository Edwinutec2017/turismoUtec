<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmento"
    android:gravity="top|center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.edwin.turismo.MenuPrincipal"
    tools:showIn="@layout/app_bar_menu_principal">

    <ImageView
        android:id="@+id/imgLog"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn"
        app:srcCompat="@drawable/banner" />

    <TextView
        android:id="@+id/txtBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorActivity"
        android:text="@string/menumsg"
        android:textColor="@color/colorLetra"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txtDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorActivity"
        android:text="@string/menumsgcon"
        android:textColor="@color/colorLetra"
        android:textSize="18sp" />
</LinearLayout>
